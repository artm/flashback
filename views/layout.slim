doctype html
html
  head
    title Flashback
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    link href="/assets/css/flashback.css" rel="stylesheet"
  body
    .container
      .navbar
        a.navbar-brand href="./" Flashback
        ul.nav.navbar-nav
          - {"drill" => "Drill", "edit" => "Edit"}.each do |url, title|
            ruby:
              def active(url,current)
                url==current ? {class: "active"} : {}
              end
            li *active(url,page)
              a href=url
                = title
      == yield
    script src="/assets/js/lib.js"
    script src="/assets/js/#{page}.js"

